@model IEnumerable<ProExam.Models.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dashboard-caption {
        margin: 30px 0;
        text-align: center;
        font-size: 40px;
        font-weight: bold;
    }

    .btn-add {
        display: flex;
        justify-content: end;
    }

    .container-table {
        padding: 0 120px;
        text-align: center
    }

    table {
        width: 1372px;
        background-color: white;
        margin: auto;
        border-collapse: collapse;
    }

    table, th, td {
        border: none;
        border-bottom: 2px solid #d5d5d5;
    }

    th, td {
        padding: 10px 20px;
        font-size: 22px;
        overflow: hidden;
    }

    .crud-btn {
        display: inline-block;
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

        .crud-btn i {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }

    .crud-btn_create {
        border-radius: 12px;
        margin-bottom: 20px;
        padding: 10px;
    }
</style>

<h1 class="dashboard-caption">Quản lý môn học </h1>


<div class="container-table">
    <div class="btn-add">
        @Html.ActionLink("Thêm môn học mới", "Create", "Subject", new { @class = "crud-btn_create btn-success" })
    </div>

    <table border="1">
        <thead style="border-bottom: 3px solid #d5d5d5 ">
            <tr>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Số câu hỏi</th>
                <th>Thời gian thi</th>
                <th>Ghi chú</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaMonHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenMonHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongCauHoi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianThi) phút
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                    <td class="action-column">
                        <a href="@Url.Action("Edit","Subject", new { id=item.MaMonHoc })" class="crud-btn btn-info">
                            <i class="fa-solid fa-pen-to-square">
                            </i>
                        </a>
                        <a href="@Url.Action("Delete","Subject", new { id=item.MaMonHoc })" class="crud-btn btn-danger">
                            <i class="fa-solid fa-x">
                            </i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

